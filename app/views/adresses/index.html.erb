<p id="notice"><%= notice %></p>

<h1>Adresses</h1>

<table>
  <thead>
    <tr>
      <th>Phone</th>
      <th>Address1</th>
      <th>Adress2</th>
      <th>City</th>
      <th>Country</th>
      <th>Zip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adresses.each do |adress| %>
      <tr>
        <td><%= adress.phone %></td>
        <td><%= adress.address1 %></td>
        <td><%= adress.adress2 %></td>
        <td><%= adress.city %></td>
        <td><%= adress.country %></td>
        <td><%= adress.zip %></td>
        <td><%= link_to 'Show', adress %></td>
        <td><%= link_to 'Edit', edit_adress_path(adress) %></td>
        <td><%= link_to 'Destroy', adress, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

